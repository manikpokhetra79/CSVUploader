<div class="container">
  <div class="row text-center m-3">
    <div class="col-md-10">
      <h3>
        Filter :
        <input type="text" id="input"  class="form-control" placeholder="Search" />
      </h3>
    </div>
  </div>
</div>
<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="table-responsive">
      <table id="table" class="table table-striped table-hover fs-6 text-capitalize">
        <thead class="table-dark">
          <% for(let i in data){%>
          <tr>
            <% let value = data[i] %>
            <% let index = 0 %>
            <!-- inner loop for accessing headings -->
            <% for(let j in value){%>
            <th style="cursor:pointer" onclick="sortTable(<%=index++%>)"><%=j%></th>
            <%}%> <%break%>
          </tr>
          <%}%>
        </thead>
        <tbody class="table-success">
          <% for(let i in data){%>
          <tr>
            <% let value = data[i] %>
            <!-- inner loop for accessing headings -->
            <% for(let j in value){%>
            <td class="p-3"><%=value[j]%></td>
            <%}%>
          </tr>
          <%}%>
        </tbody>
      </table>
      </div>
    </div>
  </div>
</div>

<!-- scripts -->
<script src="/js/helper.js"></script>
