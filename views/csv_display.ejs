<!-- stylesheets -->
<link rel="stylesheet" href="/css/displayfiles.css" />
<div class="container">
  <div class="row text-center m-3">
    <h1>List of Uploaded CSV Files:</h1>
  </div>
</div>
<div class="container">
  <div class="row">
    <ul class="list-group">
      <% for(let file of files){%>
      <li class="list-group-item d-flex justify-content-between">
        <div class="col-md-4">
          <a
            class="text-primary fs-4 text-capitalize"
            href="/csv/displayData/<%=file.id%>"
          >
            <%= file.originalname%>
          </a>
        </div>
        <div class="col-md-2">
          <button type="button" class="btn btn-secondary">
            <a href="/csv/displayData/<%=file.id%>"  class="link-light">View file</a>
          </button>
        </div>
        <div class="col-md-2">
          <button type="button" class="btn btn-danger">
            <a href="/csv/delete/<%=file.id%>"  class="link-light">Delete</a>
          </button>
        </div>
      </li>
      <%}%>
    </ul>
  </div>
</div>
